<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
	<title>会員登録</title>
</head>
<body>

<!-- イメージ -->
<div>
	<p>
		<img src="" alt="KIM SCHOOL">
	</p>
</div>

<div>
	<p>
		<img src="" alt="会員登録">
	</p>
</div>

<!-- フォーム -->
<div>
	<form action="/kimschool_spring/login/insertUser" method="post">
		<p>
			ID<br>
			<input type="text" name="id">
			<span">必須</span>
		</p>
		<p>
			氏名（漢字）<br>
			<input type="text" name="lastname_kanji" placeholder="氏">
			<input type="text" name="firstname_kanji" placeholder="名">
			<span">必須</span>
			</p>
		<p>
			氏名（フリガナ）<br>
			<input type="text" name="lastname_hurigana" placeholder="氏">
			<input type="text" name="firstname_hurigana" placeholder="名">
			<span">必須</span>
			</p>
		<p>
			性別<br>
			<input type="radio" name="gender" value="0">男
			<input type="radio" name="gender" value="0">女
			<span">必須</span>
		</p>
		<p>
			生年月日<br>
			<select>
				<option name="year" value="year">yyyy年</option>
			</select>
			<select>
				<option name="month" value="month">mm月</option>
			</select>
			<select>
				<option name="day" value="day">dd日</option>
			</select>
			<span">必須</span>
		</p>
		<p>
			E-mail<br>
			<input type="text" name="email">
			<span">必須</span>
		</p>
		<p>
			PASSWORD<br>
			<input type="text" name="password" placeholder="8桁以上の半角英数字">
			<span">必須</span>
		</p>
		<p>
			PASSWORD（確認）<br>
			<input type="text" name="password_check" placeholder="確認のため、もう一度入力してください">
			<span">必須</span>
		</p>
		<p>
			LINE ID<br>
			<input type="text" name="lineID">
		</p>
		<p>
			KaKaoTalk ID<br>
			<input type="text" name="kakaoID">
		</p>
		<p>
			<input type="submit" value="会員登録">
		</p>
	</form>
</div>




</body>
</html>